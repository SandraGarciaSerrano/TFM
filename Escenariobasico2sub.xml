<?xml version="1.0" encoding="UTF-8"?>

<!--

~~~~~~~~~~~~~~~~~~~~
VNX Sample scenarios
~~~~~~~~~~~~~~~~~~~~

Name:        tutorial_ubuntu64
Description: As simple tutorial scenario made of 6 LXC Ubuntu virtual machines (4 hosts: h1, h2, h3 and h4; 
             and 2 routers: r1 and r2) connected through three virtual networks. The host participates 
             in the scenario having a network interface in Net3.     

This file is part of the Virtual Networks over LinuX (VNX) Project distribution. 
(www: http://www.dit.upm.es/vnx - e-mail: vnx@dit.upm.es) 

Departamento de Ingenieria de Sistemas Telematicos (DIT)
Universidad Politecnica de Madrid
SPAIN

-->

<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-2.00.xsd">
  <global>
    <version>2.0</version>
    <scenario_name>tutorial_lxc_ubuntu64</scenario_name>
    <automac/>
    <!--vm_mgmt type="none" /-->
    <vm_mgmt type="private" network="10.250.0.0" mask="24" offset="200">
       <host_mapping />
    </vm_mgmt>
    <vm_defaults>
        <console id="0" display="no"/>
        <console id="1" display="yes"/>
    </vm_defaults>

    <cmd-seq seq="ls12">ls1,ls2</cmd-seq>
    <cmd-seq seq="ls123">ls12,ls3</cmd-seq>
    <cmd-seq seq="ls1234">ls123,ls4</cmd-seq>

    <vnx_cfg>tutorial_lxc_ubuntu.cvnx</vnx_cfg>

    <help>
        <seq_help seq='start-www'>Start apache2 web server</seq_help>
        <seq_help seq='stop-www'>Stop apache2 web server</seq_help>
    </help>
    
  </global>

  <net name="Net0" mode="virtual_bridge" />
  <net name="Net1" mode="virtual_bridge" />
  <net name="Net2" mode="virtual_bridge" />
  <!--net name="Net3" mode="virtual_bridge" /-->
  <net name="virbr0" mode="virtual_bridge" managed="no"/>

  <vm name="h1" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    <if id="1" net="Net0">
      <ipv4>10.1.0.2/24</ipv4>
      <ipv6>2001:db8:0::2/64</ipv6>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.0.1">10.1.0.0/16</route>   
    <route type="ipv6" gw="2001:db8:0::1">2001:db8::/32</route>
    <filetree seq="on_boot" root="/tmp/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
    	cat /tmp/hosts >> /etc/hosts
    	rm /tmp/hosts
    	dhclient eth9
    </exec>
  </vm>

  <vm name="h2" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    <if id="1" net="Net0">
      <ipv4>10.1.0.3/24</ipv4>
      <ipv6>2001:db8:0::3/64</ipv6>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.0.1">10.1.0.0/16</route>
    <route type="ipv6" gw="2001:db8:0::1">2001:db8::/32</route>
    <exec seq="ls1" type="verbatim">ls -al /tmp</exec>
    <exec seq="ls2" type="verbatim">ls -al /root</exec>
    <exec seq="ls3" type="verbatim">ls -al /usr</exec>
    <exec seq="ls4" type="verbatim">ls -al /bin</exec>
    <filetree seq="on_boot" root="/tmp/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
    	cat /tmp/hosts >> /etc/hosts
    	rm /tmp/hosts
    	dhclient eth9
    </exec>
  </vm>

  <vm name="r1" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    <if id="1" net="Net0">
      <ipv4>10.1.0.1/24</ipv4>
      <ipv6>2001:db8:0::1/64</ipv6>
    </if>
    <if id="2" net="Net1">
      <ipv4>10.1.1.1/24</ipv4>
      <ipv6>2001:db8:1::1/64</ipv6>
    </if>
    <if id="3" net="Net2">
      <ipv4>10.1.2.1/24</ipv4>
      <ipv6>2001:db8:2::1/64</ipv6>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.1.2">10.1.0.0/16</route>
    <route type="ipv6" gw="2001:db8:1::2">2001:db8::/32</route>
    <forwarding type="ip" />
    <filetree seq="on_boot" root="/tmp/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
    	cat /tmp/hosts >> /etc/hosts
    	rm /tmp/hosts
    	dhclient eth9
    </exec>
  </vm>

  <vm name="s1" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    <if id="1" net="Net1">
      <ipv4>10.1.1.2/24</ipv4>
      <ipv6>2001:db8:1::2/64</ipv6>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.1.2">10.1.0.0/16</route>
    <route type="ipv6" gw="2001:db8:1::2">2001:db8::/32</route> 
    <exec seq="on_boot" type="verbatim">
        mknod -m 666 /dev/fuse c 10 229;
    </exec>
    <filetree seq="on_boot" root="/tmp/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        cat /tmp/hosts >> /etc/hosts
        rm /tmp/hosts
        dhclient eth9
    </exec>
  </vm>

  <vm name="h3" type="lxc" arch="x86_64">
   <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
   <if id="1" net="Net2">
      <ipv4>10.1.2.4/24</ipv4>
      <ipv6>2001:db8:2::4/64</ipv6>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.2.1">10.1.0.0/16</route>
    <route type="ipv6" gw="2001:db8:2::1">2001:db8::/32</route>
    <filetree seq="on_boot" root="/root/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        cat /root/hosts >> /etc/hosts
        rm /root/hosts
        dhclient eth9
    </exec>    
  </vm>
  
  <vm name="h4" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    <if id="1" net="Net2">
      <ipv4>10.1.2.5/24</ipv4>
      <ipv6>2001:db8:2::5/64</ipv6>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.2.1">10.1.0.0/16</route>    
    <route type="ipv6" gw="2001:db8:2::1">2001:db8::/32</route>
    <filetree seq="on_boot" root="/root/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        cat /root/hosts >> /etc/hosts
        rm /root/hosts
        dhclient eth9
    </exec>     
  </vm>
  
  <host>
    <hostif net="Net2">
      <ipv4>10.1.2.6/24</ipv4>
      <ipv6>2001:db8:2::6/64</ipv6>
    </hostif>
    <route type="ipv4" gw="10.1.2.1">10.1.0.0/16</route>
    <route type="ipv6" gw="2001:db8:2::1">2001:db8::/32</route>
  </host>

</vnx>